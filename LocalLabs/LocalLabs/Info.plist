<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Microphone Permission for Voice Input -->
	<key>NSMicrophoneUsageDescription</key>
	<string>LocalLabs needs microphone access for voice input to chat with AI</string>

	<!-- Speech Recognition Permission -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>LocalLabs uses speech recognition to convert your voice to text</string>

	<!-- Local Network Permission for Device Sync -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>LocalLabs uses local network to sync conversations between your devices</string>

	<!-- Bonjour Services for MultipeerConnectivity -->
	<key>NSBonjourServices</key>
	<array>
		<string>_locallabs._tcp</string>
		<string>_locallabs._udp</string>
	</array>
</dict>
</plist>
